[color]
	ui = auto
[alias]
	s = status
	c = commit
	l = log --graph --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an %ar)%Creset'
	oops = commit --amend --no-edit
[core]
	whitespace = -trailing-space
[diff]
	mnemonicPrefix = true
	renames = true
	wordRegex = .
	submodule = log
[fetch]
	recurseSubmodules = on-demand
[grep]
	extendedRegexp = true
[log]
	abbrevCommit = true
[merge]
	conflictStyle = diff3
[mergetool]
	keepBackup = false
	keepTemporaries = false
	prompt = false
[push]
	default = upstream
[status]
	submoduleSummary = true
	showUntrackedFiles = all
[color "branch"]
	upstream = cyan
[tag]
	sort = version:refname
[credential]
	helper = cache --timeout=86400
[user]
	email = jerome@jeromepin.fr
	name = Jerome Pin
