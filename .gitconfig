[core]
	whitespace = -trailing-space
	editor = nvim
[protocol]
    version = 2
[color]
	ui = true
[alias]
	s = fuzzy status
	st = status
	ch = "!f(){ git fuzzy branch | xargs git checkout; };f"
	c = commit
    ca = commit --amend
    cae = commit --amend --no-edit
    p = push
    pl = push --force-with-lease
    r = rebase origin/master
    ri = rebase --autosquash --interactive origin/master
    ru = remote update
	l = log --graph --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an %ar)%Creset'
    bt = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset%n' --abbrev-commit --date=relative --branches
    unstage = reset HEAD --
    uncommit = reset HEAD~
    sru = "!f(){ git remote update && git stash && git rebase origin/${1:-master} && git stash pop; };f"
    sri = "!f(){ git stash && git rebase --interactive && git stash pop; };f"
[diff]
	mnemonicPrefix = true
	renames = true
	wordRegex = .
	submodule = log
	colorMoved = plain
	colormovedws = allow-indentation-change
[fetch]
	recurseSubmodules = on-demand
[grep]
	extendedRegexp = true
[log]
	abbrevCommit = true
[merge]
	conflictStyle = diff3
[mergetool]
	keepBackup = false
	keepTemporaries = false
	prompt = false
[push]
    default = current
[pull]
    rebase = true
[status]
	submoduleSummary = true
	showUntrackedFiles = all
[color "branch"]
	upstream = cyan
[tag]
	sort = version:refname
[credential]
	helper = cache --timeout=86400
[user]
    name = "Jérôme Pin"
	email = jeromepin@users.noreply.github.com
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
