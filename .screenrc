# Look and feel
# caption always "%{= bb}%{+b w}Screen: %n | %h %=%t %c"

hardstatus alwayslastline "%{b kw}%H %{r}%1` %{w}| %{g}%c %{w}| %{y}%d.%m.%Y %{w}| %{g}%l %{w}| %{-b kw}%u %-Lw%{= bW}%50> %n%f %t %{-}%+Lw%<"

# Our warning of activity
activity "Activity in %t(%n)"

term screen-256color
term xterm-256color
term rxvt-unicode-256color
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E38;5;%dm'
defbce "on"
term "screen-256color"
terminfo xterm-color hs@:cs=\E[%i%p1%d;%p2%dr:im=\E[4h:ei=\E[4l
term xterm-color

termcapinfo xterm* ti@:te@

startup_message off
msgminwait 0
msgwait 0
vbell off
defscrollback 2000
shell -$SHELL

# Left Right meta key mods
# ALT-Left and ALT-Right for aterm or xterm
bindkey ^[[1;3D prev
bindkey ^[[1;3C next
bindkey ^[[1;3A focus up
bindkey ^[[1;3B focus

