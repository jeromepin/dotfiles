# Our warning of activity
activity "Activity in %t(%n)"

# setenv SSH_TEST="benoit"

# escape ^oo      
startup_message off
msgminwait 0
msgwait 0
vbell off
defscrollback 2000
shell -$SHELL

# Left Right meta key mods
# ALT-Left and ALT-Right for aterm or xterm
bindkey ^[[1;3D prev
bindkey ^[[1;3C next
bindkey ^[[1;3A focus up
bindkey ^[[1;3B focus

