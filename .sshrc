#! /bin/bash

export PS1="\033[31m\u\033[0m at \033[33m\h\033[0m in \033[36m\w\033[0m\n\[\033[38;5;2m\]❭❭\[$(tput sgr0)\] "

PROMPT_COMMAND='/bin/echo -ne "\033k$HOSTNAME\033\\"'

# Enable autocomplete for sudo and man command
complete -cf sudo
complete -cf man

shopt -s cdspell
shopt -s nocaseglob
shopt -s checkhash
shopt -s checkwinsize
shopt -s cmdhist
shopt -s hostcomplete
shopt -s no_empty_cmd_completion
shopt -s progcomp
shopt -s extglob
shopt -s histappend
shopt -s autocd
shopt -s dirspell

# Prevent to append same command to history
export HISTCONTROL=ignoredups
export HISTCONTROL=erasedups
export AUTOFEATURE=true autotest
# Set default editor to vim
export EDITOR="/usr/bin/vim"
# export TERM=xterm-256color vim

unalias cd
alias sl="ls"
alias ll="ls -l"
alias la="ls -lA"
alias grep="grep --color=auto"
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias tree="tree --dirsfirst -aAC"
alias less="less -r"
alias ssh='ssh -AX -l root'
alias s='sshrc -AX -l root'
alias ls="ls --color=auto"
alias rm="rm -f"

export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export TERM=screen-256color
